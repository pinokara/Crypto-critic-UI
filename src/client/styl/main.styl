    &:hover{
        filter : brightness(110%);
    }
    &.hide{
        opacity: .3;
        filter: grayscale(30%);
    }
}
i, img{
    cursor pointer
    &.hide{
        opacity: .3;
        filter: grayscale(30%);
    }
}
.content-center{
    text-align center
}
#disqus_thread{
    width 800px ;
    padding 20px 10px;
    margin 0 auto ;
}
@media only screen and (max-width: 800px ){
    #disqus_thread{
        width 100% ;
    }
}
.flex-row{
    display flex ;
    flex-direction row ;
}

.flex-column{
    display flex;
    flex-direction column;
}

.pointed{
    cursor  pointer;
}
