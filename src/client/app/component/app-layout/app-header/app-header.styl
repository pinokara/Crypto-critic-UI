.app-header {
    //margin-top 50px;
    height 300px;
    position relative;
    z-index 1000;
    background #26ADE4
    .main-header {
        justify-content flex-start
        font-size 14px;
        color: #ffffff
        line-height 50px;
        .about{
            margin-left 40px;
            color white
        }
        .logo{
            margin 5px;
        }
        .search-area {
            float right
            margin-left 20px !important

            .search-item {
                margin 5px 0;
                &:hover {
                    background #0cabf8
                    color white !important
                }
                img {
                    margin 0 10px
                }
            }
        }
        .right-head {
            flex 1;
            justify-content flex-end
        }
        .head-item {
            display inline-block;
            height 50px;
            line-height 50px;
            margin-left 10px;
            i {
                margin-left 5px;
            }
        }
    }

    .logo-main{
        padding-top 60px;
        width 100%;

    }

    .txs-search-panel{
        width 100%;
        position absolute ;
        bottom 10px;
        border-width: 1px;
        border-style: solid;
        border-color: rgb(236, 239, 241);
        border-image: initial;
        background: rgb(255, 255, 255);
        box-shadow: rgba(17, 51, 83, 0.02) 0px 4px 12px 0px;
        left 50%
        outline none;
        border-radius: 4px;
        flex-wrap wrap
        transform translate(-50% ,64%)
        display: flex;
        flex-direction: row;
        justify-content: center;
        .txs-search{
            flex 1;
            .txs-input{
                outline none;
                width 100%;
                min-width   300px;
                border none
                padding: 20px 32px;

            }
        }
        .action-panel{
            padding 0 10px 0 0 ;
            align-items center ;
            justify-content center
            .txs-search{
                width 80px;
                background #1e47f8
                border 1px solid #1d45ef
                border-radius 5px;
                color white;
                margin-left  10px;
            }

        }

    }



}

@media only screen and (max-width: 540px){
    .main-header {
        display flex !important
        flex-direction column  !important;
        .search-area {
            float right
            margin 0 !important
        }
        //.right-head{
        //    visibility  hidden;
        //}
    }
    .logo-main{
        padding-top 0 !important
        img{
            height 50px;
        }
    }
    .app-header{
        left 0 ;
        transform none;
        height 160px !important;
    }
}