.app-header {
    //margin-top 50px;
    height 300px;
    position relative;
    z-index 1000;
    //top:0 ;
    //left 50%;
    //transform translate(-50%,0)
    background #26ADE4
    //&::before {
    //    content: "";
    //    position: absolute;
    //    top: 0;
    //    left: 0;
    //    width: 100%;
    //    height: 30px;
    //    opacity: .4;
    //    z-index: -1;
    //    background #cecece
    //}
    .main-header {
        justify-content flex-start
        font-size 14px;
        color: #ffffff
        line-height 50px;
        .about{
            margin-left 40px;
            color white
        }
        .logo{
            margin 5px;
        }
        .search-area {
            float right
            margin-left 20px !important

            .search-item {
                margin 5px 0;
                &:hover {
                    background #0cabf8
                    color white !important
                }
                img {
                    margin 0 10px
                }
            }
        }
        .right-head {
            flex 1;
            justify-content flex-end
        }
        .head-item {
            display inline-block;
            height 50px;
            line-height 50px;
            margin-left 10px;
            i {
                margin-left 5px;
            }
        }
    }

    .logo-main{
        padding-top 60px;
        width 100%;
    }

    .txs-search-panel{
        position absolute ;
        bottom 0;
        left 50%
        transform translate(-50% ,64%)
        display: flex;
        flex-direction: row;
        justify-content: center;
        .txs-search{
            width 700px;
            .txs-input{
                //padding 20px 15px ;
                //border-radius 10px ;
                //border 1px solid #e3e3e3
                outline none;
                width 100%;
                box-shadow: rgba(17, 51, 83, 0.02) 0px 4px 12px 0px;
                margin-bottom: 32px;
                padding: 20px 32px;
                border-width: 1px;
                border-style: solid;
                border-color: rgb(236, 239, 241);
                border-image: initial;
                background: rgb(255, 255, 255);
                border-radius: 4px;
            }
        }
        .action-panel{
            width 280px;
            position absolute;
            right: 0;
            top 50% ;
            transform translate(0, -100%)
            .txs-search{
                width 80px;
                position absolute
                left 190px;
                background #1e47f8
                border 1px solid #1d45ef
                border-radius 5px;
                color white;
                top 50% ;
                transform translate(0, -50%)
            }
            //.select-option{
            //
            //}
        }

    }


    .select-country {
        position relative;
        .country-img {
            margin-left 5px;
        }
        .content-dropdown {
            display none;
            background #ececec !important
            padding 5px;
            //-webkit-box-shadow: 8px 6px 5px -1px rgba(168, 168, 168, 1);
            //-moz-box-shadow: 8px 6px 5px -1px rgba(168, 168, 168, 1);
            //box-shadow: 8px 6px 5px -1px rgba(168, 168, 168, 1);
            flex-wrap wrap
            position absolute;
            z-index 50;
            top 50px;
            right 0;
            width 200px;
            img {
                padding 0 2px;
            }
        }

        &:hover {
            .content-dropdown {
                display block;
            }
        }
    }
}

@media only screen and (max-width: 500px){
    .main-header {
        display flex !important
        flex-direction column  !important;
        .search-area {
            float right
            margin 0 !important
        }
        .right-head{
            display none;
        }
    }
    .app-header{
        left 0 ;
        transform none;

    }
}