.switch-tabs{
    width 100%;
    .tabs-head{
        justify-content center
        height  40px;
        .tab-label{
            padding 5px 20px 5px 20px;
            font-size 18px;
            font-weight 500;
            cursor pointer
            transition border 0.3s
            &.act-tab{
                border-bottom 3px solid #bbbbbb
            }
        }
    }
    .contain{
        overflow auto;
    }
}