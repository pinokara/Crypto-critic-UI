.app-header {
    //margin-top 50px;
    height 50px;
    position fixed;
    z-index 1000;
    top:0 ;
    left 50%;
    transform translate(-50%,0)
    background white
    //&::before {
    //    content: "";
    //    position: absolute;
    //    top: 0;
    //    left: 0;
    //    width: 100%;
    //    height: 30px;
    //    opacity: .4;
    //    z-index: -1;
    //    background #cecece
    //}
    .main-header {
        justify-content flex-start
        border 1px dashed #e3e3e3
        font-size 14px;
        .logo{
            margin 5px;
        }
        .search-area {
            float right
            margin-left 20px !important

            .search-item {
                margin 5px 0;
                &:hover {
                    background #0cabf8
                    color white !important
                }
                img {
                    margin 0 10px
                }
            }
        }
        .right-head {
            flex 1;
            justify-content flex-end
        }
        .head-item {
            display inline-block;
            height 50px;
            line-height 50px;
            margin-left 10px;
            i {
                margin-left 5px;
            }
        }
    }

    .select-country {
        position relative;
        .country-img {
            margin-left 5px;
        }
        .content-dropdown {
            display none;
            background #ececec !important
            padding 5px;
            //-webkit-box-shadow: 8px 6px 5px -1px rgba(168, 168, 168, 1);
            //-moz-box-shadow: 8px 6px 5px -1px rgba(168, 168, 168, 1);
            //box-shadow: 8px 6px 5px -1px rgba(168, 168, 168, 1);
            flex-wrap wrap
            position absolute;
            z-index 50;
            top 50px;
            left 0;
            width 200px;
            img {
                padding 0 2px;
            }
        }

        &:hover {
            .content-dropdown {
                display block;
            }
        }
    }
}

@media only screen and (max-width: 500px){
    .main-header {
        display flex !important
        flex-direction column  !important;
        .search-area {
            float right
            margin 0 !important
        }
    }
}