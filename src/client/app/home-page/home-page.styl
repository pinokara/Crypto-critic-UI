.home-page{
    //width 1200px;
    margin 0 auto;
    min-height 1000px;
    overflow auto
    .cards{
        justify-content center
        margin-bottom 50px;
        min-height 194px;
        flex-wrap wrap;
        .info-card{
            background white ;
            box-shadow:  5px 11px 12px 0 rgba(17, 51, 83, 0.2)
            padding: 20px 40px;
            border-radius: 10px;
            margin 5px 10px;
        }
    }

    .fking-comp{
        width 50%;
        margin 30px auto 0 auto;
    }
    @media only screen and (max-width: 640px){
        .fking-comp{
            width 100%;
        }
    }
    .pagination-table-cover{
        margin-top 50px;
        table{
            td{
                height 60px;
                .cell{
                    &.vote{
                        i{
                            font-size 20px ;
                            margin-right 20px
                            &.voted{
                                color #14b148

                                //color #df3d34
                            }
                        }
                    }
                    &.name{
                        display flex;
                        flex-direction row ;
                        justify-content start ;
                        justify-items center
                        .img-cover{
                            margin-right 20px;
                        }
                        .info{
                            line-height 25px ;
                            height 25px;
                        }
                    }
                    //&.percent{
                    //}
                    &.price{
                        color #0c85d0;
                        &:hover{
                            text-decoration underline
                        }
                    }

                }
                .apexcharts-canvas{
                    width auto !important
                }
                .apexcharts-toolbar, .apexcharts-xaxis,.apexcharts-gridlines-horizontal{
                    display none
                }
                //.apexcharts-grid{
                //    line{
                //        display none;
                //    }
                //}
            }
        }
    }

