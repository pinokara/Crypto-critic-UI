.txs-search {
    position relative;
    left 0;
    top 0;
    width 100%;
    border-width: 1px;
    border-style: solid;
    border-color: rgb(236, 239, 241);
    border-image: initial;
    background: rgb(255, 255, 255);
    box-shadow: rgba(17, 51, 83, 0.02) 0px 4px 12px 0px;
    outline none;
    border-radius: 4px;
    display flex;
    flex-direction row;
    justify-content flex-start;
    align-items center;
    margin-bottom 20px;
    .fa-search {
        font-size 30px;
        padding: 5px 10px 5px 30px;
    }
    .close-cover{
        position absolute;
        right: 10px ;
        top: 50% ;
        transform : translate(0,-50%);
        .fa-times-circle{
            font-size 25px;
            &:hover{
                color red;
                animation spin .8s ease-in-out infinite;
            }
        }
    }

    .txs-input {
        outline none;
        //width 100%;
        flex 1;
        min-width 300px;
        border none
        padding: 20px 32px;

    }
    .dropdown-content {
        position absolute;
        overflow auto;
        min-width 200px;
        width 100%;
        max-height 300px;
        background white
        top 70px;
        box-shadow: 0 5px 30px -1px rgba(168, 168, 168, 1);
        .item {
            padding 10px 5px;
            cursor pointer;
            &:hover {
                background #0cabf8;
                color white;
            }
            .flex-row{
                align-items  center;
            }
        }
    }
}