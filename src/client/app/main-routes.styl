.main-routes {
    animation faded 1s ease alternate
    &.dark{
        div, button,h1,h3,h2,h4,h5,tr,td,thead,tbody,ul,li,section,input, .logo{
            background #292a36 !important;
            color white !important
        }
    }
    .auto-expand-enter {
        & > div {
            transform: translate(0, -100%);
            opacity 0;
        }
    }

    .auto-expand-enter.auto-expand-enter-active {
        & > div {
            transition: transform .3s, opacity .3s;
            transform: translate(0, 0);
            opacity 1;
        }
    }

    .auto-expand-exit {
        & > div {
            transform: translate(0, 0);
            opacity 1;
        }
    }

    .auto-expand-exit.auto-expand-exit-active {
        & > div {
            transition: transform .3s, opacity .3s;
            transform: translate(0, -100%);
            opacity 0;
        }
    }

}
