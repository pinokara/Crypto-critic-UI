.search-area{
    width 300px;
    height 30px;
    position relative;
    .input-search{
        width 100%;
        outline none ;
        border-radius 30px;
        border 1px solid #d2d2d2
        padding 0 5px;
    }
    .dropdown-content{
        position absolute;
        width 100%;
        padding 0 5px;
        height 300px;
        max-height 300px;
        background #fcfcfc
        -webkit-box-shadow: 21px 16px 11px -4px rgba(204,204,204,1);
        -moz-box-shadow: 21px 16px 11px -4px rgba(204,204,204,1);
        box-shadow: 21px 16px 11px -4px rgba(204,204,204,1);
    }
}