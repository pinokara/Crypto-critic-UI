.search-area{
    width 300px;
    height 50px;
    position relative;
    .input-search{
        width 100%;
        outline none ;
        border-bottom-right-radius 30px;
        border-top-right-radius 30px;
        height 30px;
        margin 10px 0;
        border 1px solid #d2d2d2
        padding 0 10px;
    }
    .fa-times{
        position absolute ;
        right: 30px ;
        top: 50%;
        transform  translate(0,-50%)
    }
    .fa-search{
        position absolute ;
        right: 10px ;
        top: 50%;
        transform  translate(0,-50%)
    }
    .dropdown-content{
        position absolute;
        overflow scroll
        width 100%;
        z-index 10;
        top 40px;
        max-height 300px;
        background #fcfcfc
        -webkit-box-shadow: 0 6px 8px rgba(0,0,0,.3);
        -moz-box-shadow: 0 6px 8px rgba(0,0,0,.3);
        box-shadow: 0 6px 8px rgba(0,0,0,.3);
    }
}