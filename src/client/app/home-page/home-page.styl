.home-page{
    width 1200px;
    margin 0 auto;
    min-height 500px;
    .pagination-table-cover{
        margin-top 50px;
        table{
            td{
                height 60px;
                .cell{
                    &.vote{
                        i{
                            font-size 20px ;
                            margin-right 20px
                            &.voted{
                                color #14b148

                                //color #df3d34
                            }
                        }
                    }
                    &.name{
                        display flex;
                        flex-direction row ;
                        justify-content start ;
                        justify-items center
                        .img-cover{
                            margin-right 20px;
                        }
                        .info{
                            line-height 25px ;
                            height 25px;
                        }
                    }
                    //&.percent{
                    //}
                    &.price{
                        color #0c85d0;
                        &:hover{
                            text-decoration underline
                        }
                    }

                }
                .apexcharts-canvas{
                    width auto !important
                }
                .apexcharts-toolbar, .apexcharts-xaxis,.apexcharts-gridlines-horizontal{
                    display none
                }
                //.apexcharts-grid{
                //    line{
                //        display none;
                //    }
                //}
            }
        }
    }

